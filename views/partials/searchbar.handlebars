<div class="input-group">
  <div class="form-outline">
    <form method="POST" action="/search/users" id="searchForm">
        <input type="search" id="searchFormInput" class="form-control" name="searchTerm"/>
        <label class="form-label" for="searchFormInput">Search</label> <!--label for should match input id-->  

        <input type="radio" id="searchRadioOption1" class="search-type-select" name="searchType" value="users" 
        onclick="form.action = '/search/users'"/>
        <label for="searchRadioOption1" id="searchRadioLabel1">Search users</label>
        
        <input type="radio" id="searchRadioOption2" class="search-type-select" name="searchType" value="posts"
        onclick="form.action = '/search/posts'"/>
        <label for="searchRadioOption2" id="searchRadioLabel2">Search posts</label>
    </form> 

  </div>
  <button type="submit" form="searchForm" class="btn btn-primary">
      >
    <i class="fas fa-search"></i>
  </button>
</div>

<div id="users-search-div">
    {{#if results.length}}
        <ul class="users-search-results">
            {{#each results}}
                <li>
                    {{this.username}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p class="users-not-found">
            Sorry but no users were found with that search term
        </p>        
    {{/if}}
</div>

<div id="posts-search-div">
    {{#if results.length}}
        <ul class="posts-search-results">
            {{#each results}}
                <li>
                    {{this.content}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p class="posts-not-found">
            Sorry but no posts were found using that search term
        </p>        
    {{/if}}
</div>