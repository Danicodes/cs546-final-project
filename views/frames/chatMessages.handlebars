<section>
	<h2>Chat</h2>
	<ul class="message-list">
		{{#each messages}}
			<li>
				<p class="{{this.author}}">{{this.message}}</p>
			</li>
		{{/each}}
	</ul>
	<form id="message-form" class="message-form" method="post" action="/relationship/{{relationshipId}}/messages">
        <label for="message">Type a Message Here</label>
        <input type="text" id="message" name="message">
        <button type="submit">Submit</button>
    </form>
	<p class="hidden" id="error-message"></p>
	<a id='refresh-link' class='refresh-link'>Refresh Messages</a>
</section>